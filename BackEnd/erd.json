{
    "User": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "address": {
          "type": "object",
          "properties": {
            "city": {
              "type": "string"
            },
            "street": {
              "type": "string"
            },
            "building_number": {
              "type": "string"
            }
          }
        },
        "image": {
          "type": "string"
        },
        "role": {
          "type": "string"
        }
      }
    },
    "Item": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "qty": {
          "type": "number"
        },
        "image": {
          "type": "string"
        },
        "material": {
          "type": "string"
        },
        "size": {
          "type": "string"
        },
        "color": {
          "type": "string"
        },
        "bidding_gap": {
          "type": "number"
        },
        "start_bidding": {
          "type": "number"
        },
        "max_price": {
          "type": "number"
        },
        "end_time": {
          "type": "date"
        },
        "category": {
          "type": "array",
          "ref": "categories"
        }
      }
    },
    "Contact": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "phone": {
          "type": "string"
        },
        "subject": {
          "type": "string"
        },
        "message": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "_id": {
          "type": "number"
        },
        "name": {
          "type": "string"
        }
      }
    },
    "Bidding": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number"
        },
        "auction_id": {
          "type": "number",
          "ref": "auctions"
        },
        "item_id": {
          "type": "number",
          "ref": "items"
        },
        "user_id": {
          "type": "number",
          "ref": "users"
        },
        "amount": {
          "type": "number"
        }
      }
    },
    "Auction": {
        "type": "object",
        "properties": {
          "id": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "reference_number": {
            "type": "number"
          },
          "start_date": {
            "type": "date"
          },
          "end_date": {
            "type": "date"
          },
          "time": {
            "type": "string"
          },
          "fees": {
            "type": "number"
          },
          "status": {
            "type": "string",
            "enum": ["started", "ended", "not started"]
          },
          "items": {
            "type": "array",
            "ref": "items"
          },
          "user": {
            "type": "ref",
            "refSchema": "users"
          }
        }
    }
}
